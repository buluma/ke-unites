<?xml version="1.0" encoding="utf-8" ?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>Staff Team Profile</name>
	<author>Michael Buluma</author>
	<version>3.0.0</version>
	<creationDate>July 2017</creationDate>
	<description>Staff Team Profile</description>
	<files>
		<filename>mod_team.xml</filename>
		<filename module="mod_team">mod_team.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="staff_name" type="text" label="Staff Name" description="Staff Name"/>
				<field name="staff_image" type="media" directory="images" label="Staff Image" description="Staff Image"/>
				<field name="staff_title" type="text" label="Staff Title" description="Staff Title"/>
				<field name="staff_desc" type="textarea" label="Staff Description" description="Staff Description"/>
				<field name="staff_email" type="text" label="Staff Email" description="Staff Email"/>
			</fieldset>
			<fieldset name="advanced">
				<field name="moduleclass_sfx" type="text" label="Module Class Suffix" description="Please enter Module Class Suffix"/>
			</fieldset>
		</fields>
	</config>
</extension>
